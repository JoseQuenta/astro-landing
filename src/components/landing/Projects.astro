---
import { projects } from "../../config/projects.json";
//console.log(projects);
---

<h2 class="font-bold my-8 text-5xl text-center">Projects</h2>

{
    projects.map((project) => (
        <div class="flex flex-col mb-2 text-center md:text-left md:flex-row">
            <div class="flex-1 p-4">
                <h2 class="font-bold text-2xl my-4">{project.title}</h2>
                <p class="my-2">{project.Description}</p>
                <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-300">
                    More info</button>
            </div>
            <div class="flex-1">
                <img src={project.image} class="w-72 m-auto" alt="" />
            </div>
        </div>
    ))
}
