---
import features from '../../config/features.json'
---

<h1 class="text-center mt-10 font-bold text-5xl"> Features</h1>

<div class="grid md:grid-cols-3 gap-4 p-4">

    {
        features.map((feature)=> (

        <div class="bg-slate-600 p-10 rounded-xl">
        <h2 class="text-2xl font-bold my-4">{feature.title}</h2>
        <p>{feature.director}</p>
    </div>

        ))
    }
</div>